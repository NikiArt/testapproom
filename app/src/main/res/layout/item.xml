<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginBottom="8dp"
                                   app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                tools:text="Nissan"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/item_model"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp"/>
        <TextView
                tools:text="X-Trail"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/item_submodel"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline"/>
        <TextView
                tools:text="a111cc777"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/item_number"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/item_model"
                android:layout_marginTop="16dp"/>
        <TextView
                android:text="Age:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/item_age_label"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/item_submodel"/>
        <TextView
                tools:text="11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/item_age"
                app:layout_constraintStart_toStartOf="@+id/guideline1" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/item_age_label"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.4"
                android:id="@+id/guideline"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.7"
                android:id="@+id/guideline1"/>
        <TextView
                android:text="Color:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/item_color_label"
                app:layout_constraintTop_toBottomOf="@+id/item_age_label"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"/>
        <TextView
                tools:text="Gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_color"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/item_age"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>